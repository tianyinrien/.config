#Zathura configuration file
# See man `man zathurarc'

# Open document in fit-width mode by default
set adjust-open "fit-width"

# One page per row by default
set pages-per-row 1

#stop at page boundries
set scroll-page-aware "true"
set smooth-scroll "true"
set scroll-full-overlap 0.03

#zoom settings
set zoom-min 10
#set guioptions ""

set selection-clipboard clipboard

# zathurarc-dark

set font "Hurmit Nerd Font 15"
set default-bg "#444444"
set default-fg "#ebdbb2" #01

set statusbar-fg "#ebdbb2" #04
set statusbar-bg "#333333" #01

set inputbar-bg "#333333" #00 currently not used
set inputbar-fg "#ebdbb2" #02

set notification-error-bg "#333333" #08
set notification-error-fg "#151515" #00

set notification-warning-bg "#444444" #08
set notification-warning-fg "#151515" #00

set highlight-color "#ffffff" #0A
set highlight-fg "red" #04
set highlight-active-color "#bebebe" #0D
set highlight-transparency "0.6"



set completion-highlight-fg "#111111" #02
set completion-highlight-bg "#ebdbb2" #0C

set completion-bg "#333333" #02
set completion-fg "#999999" #0C

set notification-bg "#999999" #0B
set notification-fg "#000000" #00


set window-title-basename "true"
set statusbar-basename "true"

set recolor "true"
set recolor-lightcolor "#222222" #00

#set recolor-darkcolor "#bebebe" #06
#set recolor-darkcolor "#a9a9a9" #06
set recolor-darkcolor "#ebdbb2" #06
#set recolor-reverse-video "true"
#set recolor-keephue "true"

set render-loading "false"
set scroll-step 50
#unmap f
#map f toggle_fullscreen
#map [fullscreen] f toggle_fullscreen
